{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "pkill *": "deny",
      "killall *": "deny",
      "awk *": "allow",
      "cat *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "git add*": "allow",
      "git branch --list*": "allow",
      "git cat-file *": "allow",
      "git describe": "allow",
      "git diff *": "allow",
      "git fetch *": "allow",
      "git grep *": "allow",
      "git imerge diagram*": "allow",
      "git imerge list*": "allow",
      "git log*": "allow",
      "git ls-files*": "allow",
      "git ls-tree*": "allow",
      "git merge-base*": "allow",
      "git merge-tree*": "allow",
      "git show*": "allow",
      "git stash list*": "allow",
      "git stash show*": "allow",
      "git status*": "allow",
      "gh issue list*": "allow",
      "gh issue search*": "allow",
      "gh issue status*": "allow",
      "gh issue view*": "allow",
      "gh pr diff *": "allow",
      "gh pr list*": "allow",
      "gh pr search*": "allow",
      "gh pr status *": "allow",
      "gh pr view *": "allow",
      "gh run view *": "allow",
      "head": "allow",
      "identify": "allow",
      "ai-safe-rm *": "allow",
      "jobs": "allow",
      "jq": "allow",
      "md5sum*": "allow",
      "mkdir*": "allow",
      "npm search*": "allow",
      "npm info*": "allow",
      "ls": "allow",
      "ls *": "allow",
      "readlink *": "allow",
      "sed*": "allow",
      "sort*": "allow",
      "tail *": "allow",
      "tee*": "allow",
      "test*": "allow",
      "tree*": "allow",
      "true": "allow",
      "uname *": "allow",
      "uvx ruff*": "allow",
      "wc*": "allow"
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "editor_open": "<leader>e",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_share": "<leader>s",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "tool_details": "<leader>d",
    "model_list": "<leader>m",
    "theme_list": "<leader>t",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j",
    "messages_page_up": "ctrl+alt+p",
    "messages_page_down": "ctrl+alt+n",
    "messages_half_page_up": "ctrl+alt+u",
    "messages_half_page_down": "ctrl+alt+d",
    "messages_previous": "ctrl+alt+k",
    "messages_next": "ctrl+alt+j",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g",
    "variant_cycle": "<leader>v",
    "input_transpose_characters": "ctrl+t",
    "app_exit": "ctrl+c,<leader>q"
  },
  "plugin": ["opencode-beads", "opencode-pty"]
}
